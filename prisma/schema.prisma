generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DatabaseType {
  MONGODB
  MYSQL
}

enum TeamRole {
  OWNER
  EDITOR
  VIEWER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  projects  Project[]
  teams     TeamToken[] // Relation to Join Table
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id        String      @id @default(cuid())
  name      String
  members   TeamToken[] // Using explicit join table for flexibility
  projects  Project[]
}

model TeamToken {
  id     String   @id @default(cuid())
  userId String
  user   User     @relation(fields: [userId], references: [id])
  teamId String
  team   Team     @relation(fields: [teamId], references: [id])
  role   TeamRole @default(VIEWER)

  @@index([userId])
  @@index([teamId])
}

model Project {
  id        String          @id @default(cuid())
  name      String
  type      DatabaseType    @default(MONGODB)
  content   Json?
  version   Int             @default(0) // Optimistic Locking
  userId    String?         // Optional if owned by Team
  user      User?           @relation(fields: [userId], references: [id])
  teamId    String?
  team      Team?           @relation(fields: [teamId], references: [id])
  versions  ProjectVersion[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@index([userId])
  @@index([teamId])
  @@index([type])
}

model ProjectVersion {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  content     Json
  description String?
  createdAt   DateTime @default(now())

  @@index([projectId])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  action     String   // e.g., PROJECT_DELETED, VERSION_RESTORED
  resourceId String?  // Optional ID of related object
  metadata   Json?
  timestamp  DateTime @default(now())
  
  // Optional relations usually avoided in audit logs to prevent preventing deletion, but can be added if strict integrity needed.
  // user User @relation(...) 

  @@index([userId])
  @@index([timestamp])
}
